Code: Character Pattern

import java.io.*;
import java.util.Scanner;
public class Solution {


	public static void main(String[] args) {
		
		Scanner s=new Scanner(System.in);
		int N=s.nextInt();
		for(int i=1;i<=N;i++)
		{
			int k=i;

			for(int j=1; j<=i;j++,k++)
			{
				System.out.print( (char) (k+64));
			}
			 System.out.println("");
		}
		
	}

}

Output: 5
A
BC
CDE
DEFG
EFGHI


*********************************************************************************************************************


Code: Interesting Alphabets

import java.io.*;
import java.util.Scanner;

public class Solution {

	public static void main(String[] args) {

		Scanner s = new Scanner(System.in);
		int N = s.nextInt();
		for (int i = N; i >=1; i--) 
		{
		
			for (int j = i; j<= N; j++) 
			{
				System.out.print((char) (j + 64));
			}
			System.out.println("");
		}

	}

}


Output: 5
E
DE
CDE
BCDE
ABCDE

